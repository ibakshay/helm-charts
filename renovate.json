{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 2,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/perses/Chart.yaml$"
      ],
      "matchStrings": [
        "appVersion=\"(?<currentValue>.*?)\"\\n"
      ],
      "depNameTemplate": "perses/perses"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPaths": [
        "charts/**"
      ],
      "bumpVersion": "minor"
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "make"
    ],
    "fileFilters": [
      "**/*"
    ]
  }
}