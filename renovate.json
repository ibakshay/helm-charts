{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 2,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/perses/Chart.yaml$"
      ],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\n"
      ],
      "depNameTemplate": "persesdev/perses",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchFileNames": [
        "charts/**"
      ],
      "bumpVersion": "minor"
    }
  ],
  "allowedPostUpgradeCommands": [
    "^make$"
  ],
  "postUpgradeTasks": {
    "commands": [
      "make"
    ],
    "fileFilters": [
      "**/*"
    ]
  }
}