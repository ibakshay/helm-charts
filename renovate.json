{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPaths": [
        "charts/**"
      ],
      "bumpVersion": "minor"
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "make"
    ],
    "fileFilters": [
      "**/*"
    ]
  }
}